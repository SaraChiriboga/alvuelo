<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackContentArea" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CarritoManagerController">
    <children>
        <AnchorPane prefHeight="812.0" prefWidth="375.0" style="-fx-background-image: url('/bckgrnd.png');" stylesheets="@main-style.css">

            <!-- Contenedor para productos -->
            <VBox fx:id="contenedorProductos" layoutX="30.0" layoutY="75.0" prefHeight="460.0" prefWidth="316.0" spacing="20.0" />

            <!-- Total -->
            <Label fx:id="totalLabel" layoutX="32.0" layoutY="564.0" prefWidth="316.0" styleClass="totalLabel" text="Total: $0.00">
                <font>
                    <Font size="22.0" />
                </font>
            </Label>

            <!-- BotÃ³n de continuar -->
            <Button fx:id="continuarPagoBtn" layoutX="110.0" layoutY="633.0" onAction="#continuarAPago" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: #c23939; -fx-text-fill: white; -fx-background-radius: 30px; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 4, 0.3, 0, 2);" text="Continuar a pagar" />

            <!-- Barra inferior -->
            <HBox fx:id="bar" alignment="CENTER" layoutX="30.0" layoutY="720.0" prefHeight="61.0" prefWidth="316.0" spacing="40.0" style="-fx-background-color: c23939;">
                <children>
                    <ImageView fitHeight="30.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true" style="-fx-opacity: 50;">
                        <image>
                            <Image url="@store.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="41.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@shoppingcar.png" />
                        </image>
                    </ImageView>
                    <ImageView fitHeight="41.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@user.png" />
                        </image>
                    </ImageView>
                </children>
            </HBox>

        </AnchorPane>
    </children>
</StackPane>
