<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="stackContentArea" alignment="TOP_CENTER"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="PagosManagerController">
    <children>
        <AnchorPane prefHeight="812.0" prefWidth="375.0" style="-fx-background-color: #FFF5ED;" stylesheets="@main-style.css">

            <!-- Logo superior -->
            <ImageView fitHeight="130.0" fitWidth="170.0" layoutX="125.0" layoutY="30.0" preserveRatio="true">
                <image>
                    <Image url="@logo.png" />
                </image>
            </ImageView>

            <!-- Tabs de tipo de servicio -->
            <HBox layoutX="30.0" layoutY="140.0" spacing="10.0">
                <children>
                    <Button fx:id="btnEntrega" text="Entrega" onAction="#seleccionarEntrega"
                            style="-fx-background-color: #C23939; -fx-text-fill: white; -fx-background-radius: 15px;" />
                    <Button fx:id="btnEnRestaurante" text="En Restaurante" onAction="#seleccionarEnRestaurante"
                            style="-fx-background-color: white; -fx-text-fill: #C23939; -fx-background-radius: 15px; -fx-border-color: #C23939;" />
                </children>
            </HBox>

            <!-- Panel Entrega -->
            <VBox fx:id="panelEntrega" layoutX="30.0" layoutY="190.0" prefWidth="316.0" spacing="10.0" visible="true">
                <children>
                    <Label text="Campus de entrega:" />
                    <TextField fx:id="campoCampusEntrega" promptText="Ej: Granados" />
                    <Label text="Referencia de entrega:" />
                    <TextField fx:id="campoReferenciaEntrega" promptText="Punto exacto..." />
                </children>
            </VBox>

            <!-- Panel En Restaurante -->
            <VBox fx:id="panelEnRestaurante" layoutX="30.0" layoutY="190.0" prefWidth="316.0" spacing="10.0" visible="false">
                <children>
                    <Label text="Número de personas:" />
                    <TextField fx:id="campoNumPersonas" promptText="Ej: 2" />
                </children>
            </VBox>

            <!-- Información del cliente y método de pago -->
            <VBox layoutX="30.0" layoutY="410.0" prefWidth="316.0" spacing="10.0">
                <children>
                    <Label fx:id="restauranteLabel" styleClass="labelH2" text="" />
                    <Label fx:id="clienteLabel" styleClass="labelH3" text="" />

                    <HBox spacing="10.0">
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <image>
                                <Image url="@Phone.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="telefonoLabel" styleClass="labelNormal" text="" />
                    </HBox>

                    <Label styleClass="labelNote" />
                    <Label styleClass="labelNote" text="Instrucciones/Notas" />
                    <Separator />

                    <Label styleClass="labelH3" text="Método de pago" />
                    <Separator />
                    <RadioButton fx:id="pagoEfectivo" text="Efectivo" selected="true" />
                    <RadioButton fx:id="pagoTarjeta" text="Tarjeta" />
                    <RadioButton fx:id="pagoTransferencia" text="Transferencia" />
                </children>
            </VBox>

            <!-- Subtotal -->
            <Label fx:id="totalLabel" layoutX="30.0" layoutY="660.0" prefWidth="316.0" styleClass="totalLabel" text="Subtotal: $0.00" />

            <!-- Botón pagar -->
            <Button fx:id="confirmarPagoBtn" layoutX="100.0" layoutY="700.0" onMouseClicked="#procesarPago"
                    prefHeight="45.0" prefWidth="180.0"
                    style="-fx-background-color: #C23939; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 20px;"
                    text="Hacer pedido" />

            <!-- Estado del pago -->
            <Label fx:id="estadoPagoLabel" layoutX="30.0" layoutY="760.0" prefWidth="316.0" styleClass="estadoLabel" />
        </AnchorPane>
    </children>
</StackPane>

